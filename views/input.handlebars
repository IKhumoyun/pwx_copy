<div class="row justify-content-center">
    <div class="col-xl-6 col-lg-8 col-md-12 col-sm-12 col-12">
        <div class="card">
            <div class="form-input">
                <form action="/" method="post" role="form" enctype="application/x-www-form-urlencoded">
                    <div class="form-group">
                        <label class="form-control-label" for="userNameField">Username</label>
                        <input type="text" class="form-control" name="userNameField" id="userNameField" placeholder="Username">
                    </div>

                    <div class="form-group">
                        <label for="passwordField">Password</label>
                        <input type="password" class="form-control" name="passwordField" id="passwordField" placeholder="Password">
                    </div>

                    <div class="form-group">
                        <label for="comment">Comment</label>
                        <textarea class="form-control" rows="5" name="comments" id="comments"></textarea>
                    </div>

                    <div class="form-group">
                        <label for="validationField">Valid for</label>
                        <select class="form-control" id="validationField" name="validationField">
                            <option>1 hour</option>
                            <option>4 hours</option>
                            <option>1 day</option>
                            <option>1 week</option>
                            <option>1 month</option>
                        </select>
                    </div>

                    <div class="form-check">
                        <label class="form-check-label">
                            <input type="checkbox" class="form-check-input" name="checkbox">
                            Delete record after it has been viewed
                        </label>
                    </div>

                    <button type="submit" class="btn btn-primary">Generate Link</button>
                </form>
            </div>
        </div>
    </div>
</div>